<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>

<div class="row">
  <div class="col-12">
    <div
      class="page-title-box d-flex align-items-center justify-content-between"
    >
      <h4 class="mb-0">Bookings</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript: void(0);">Bookings</a>
          </li>
          <li class="breadcrumb-item active">Bookings</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<% if (message && message.length > 0) { %>
<ul class="errors">
  <%= message %>
</ul>
<% } %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="row mb-2">
          <div class="col-sm-8"></div>
          <div class="col-sm-4">
            <div class="search-box me-2 mb-2 d-inline-block">
              <div class="position-relative">
                <form
                  method="get"
                  action="/bookings"
                  class="row flex-row flex-nowrap"
                >
                  <input
                    type="text"
                    class="form-control col-8 inputSearch"
                    id="inputSearch"
                    name="key"
                    placeholder="Search..."
                    style="height: 40px"
                  />
                  <input
                    type="submit"
                    value="search"
                    class="btn btn-success waves-effect waves-light mb-2 me-2 col-4 ms-2"
                  />
                </form>
              </div>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table align-middle table-nowrap table-check">
            <thead class="table-light">
              <tr>
                <th style="width: 20px" class="align-middle">
                  <div class="form-check font-size-16">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="checkAll"
                    />
                    <label class="form-check-label" for="checkAll"></label>
                  </div>
                </th>
                <th class="align-middle" style="width: 7%">Date</th>
                <th class="align-middle" style="width: 7%">Image</th>
                <th class="align-middle" style="width: 15%">Tour name</th>
                <th class="align-middle" style="width: 15%">User</th>
                <th class="align-middle" style="width: 10%">Unit price</th>
                <th class="align-middle" style="width: 10%">Qty</th>
                <th class="align-middle" style="width: 10%">Total</th>
                <th class="align-middle">Action</th>
              </tr>
            </thead>
            <tbody>
              <%- contentFor('body') %> <% bookings.forEach(function(booking) {
              %>
              <tr>
                <td>
                  <div class="form-check font-size-16">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="orderidcheck01"
                    />
                    <label
                      class="form-check-label"
                      for="orderidcheck01"
                    ></label>
                  </div>
                </td>
                <td><b><%= booking.createdAt %></b></td>
                <td>
                  <img
                    src="<%= process.env.NODE_URL %>/img/tours/<%= booking.tour.imageCover %>"
                    style="width: 120px; height: auto"
                    onerror="this.onerror=null;this.src='/placeholder.jpg';"
                  />
                </td>
                <td><b><%= booking.tour.name %></b></td>
                <td>
                  <b
                    ><%= booking.user.name %> <%= booking.user.surname %></b><br /><%=
                    booking.user.email %>
                </td>
                <td>€ <%= booking.price.toFixed(2) %></td>
                <td>€ <%= booking.qty %></td>
                <td>€ <%= booking.total.toFixed(2) %></td>

                <td>
                  <div class="d-flex gap-1">
                    <ul class="list-inline mb-0">
                      <li class="list-inline-item">
                        <a
                          href="/tour/<%= booking._id %>"
                          class="px-2 text-primary"
                          data-toggle="tooltip"
                          data-placement="top"
                          title="Edit"
                          ><i class="bx bx-pencil font-size-22"></i
                        ></a>
                      </li>

                    
                      <li class="list-inline-item">
                        <form
                          id="deleteForm<%= booking._id %>"
                          method="post"
                          action="/tour/delete/<%= booking._id %>"
                        >
                          <a
                            href="javascript:deleteTour('<%= booking._id %>')"
                            id="deleteLink<%= booking._id %>"
                            data-toggle="tooltip"
                            data-placement="top"
                            title="Delete"
                            ><i class="bx bx-trash font-size-22 red"></i
                          ></a>
                        </form>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <ul class="pagination pagination-rounded justify-content-end mb-2">
          <li class="page-item disabled">
            <a
              class="page-link"
              href="javascript: void(0);"
              aria-label="Previous"
            >
              <i class="mdi mdi-chevron-left"></i>
            </a>
          </li>
          <li class="page-item active">
            <a class="page-link" href="javascript: void(0);">1</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="javascript: void(0);">2</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="javascript: void(0);">3</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="javascript: void(0);">4</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="javascript: void(0);">5</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="javascript: void(0);" aria-label="Next">
              <i class="mdi mdi-chevron-right"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>

<script>
  document.addEventListener('load', function () {
    $(function () {
      $('[data-toggle="tooltip"]').tooltip();
    });

    const form = document.querySelector('#search-form');
    const queryInput = document.querySelector('#inputSearch');
    const resultsList = document.querySelector('#results');

    form.addEventListener('submit', (event) => {
      event.preventDefault();

      const query = queryInput.value;

      fetch(`/search?query=${query}`)
        .then((response) => response.json())
        .then((data) => {
          resultsList.innerHTML = '';
          data.forEach((result) => {
            const listItem = document.createElement('li');
            listItem.textContent = result.name;
            resultsList.appendChild(listItem);
          });
        })
        .catch((error) => console.error(error));
    });
  });
</script>
