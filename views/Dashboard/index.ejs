<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>

<div class="row">
  <div class="col-12">
    <div
      class="page-title-box d-flex align-items-center justify-content-between"
    >
      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript: void(0);">Dashboard</a>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>

<%- contentFor('body') %>

<div class="row">
  <div class="col-xl-4">
    <div class="card bgDash minHeightDash">
      <div class="card-body">
        <div class="text-center pt-3">
          <ul class="bg-bubbles ps-0">
            <li><i class="bx bx-grid-alt font-size-24"></i></li>
            <li><i class="bx bx-tachometer font-size-24"></i></li>
            <li><i class="bx bx-store font-size-24"></i></li>
            <li><i class="bx bx-cube font-size-24"></i></li>
            <li><i class="bx bx-cylinder font-size-24"></i></li>
            <li><i class="bx bx-command font-size-24"></i></li>
            <li><i class="bx bx-hourglass font-size-24"></i></li>
            <li><i class="bx bx-pie-chart-alt font-size-24"></i></li>
            <li><i class="bx bx-coffee font-size-24"></i></li>
            <li><i class="bx bx-polygon font-size-24"></i></li>
          </ul>
          <div class="main-wid position-relative">
            <img
              src="img/logo-white.png"
              style="width: 20%"
              class="mt-3 mb-4"
            />
            <h2 class="text-white">Demo</h2>
            <h3 class="text-white">Tours website Cms</h3>
            <h4 class="text-white mb-0">Developed in Node.js</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-8">
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <div class="card minHeightDash">
          <div class="card-body">
            <h3 class="mt-5 mb-2 text-center red">Important</h4>
              <h3 class="mt-4 mb-0 text-center" style="font-weight: normal">
                The cms is in <b>Demo Mode</b>. 
              </h3>
              <h4 class="mt-2 mb-5 text-center" style="font-weight: normal">
                The Crud operations are not allowed.
              </h4>
              </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card minHeightDash">
          <div class="card-body displayCenter">
              <img src="img/node.png">
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card minHeightDash">
          <div class="card-body displayCenter">
              <img src="img/express.png">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xl-6">
    <div class="row px-2">
        <div class="card">
          <div class="card-header">
            <div class="align-items-center d-flex">
              <h4 class="card-title mb-0 flex-grow-1">Last registered users</h4>
              <div class="flex-shrink-0">
                <div class="dropdown">
                  <a
                    class="dropdown-toggle"
                    href="#"
                    id="dropdownMenuButton2"
                    data-bs-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="card-body px-0 pt-2">
            <div
              class="table-responsive px-3"
              data-simplebar
              style="max-height: 393px"
            >
              <table
                class="table table-borderless table-centered align-middle table-nowrap mb-0"
              >
                <tbody>
                  <% users.forEach(function(users) { %>
                  <tr>
                    <td style="width: 20px">
                      <img
                        src="assets/images/users/<%= users.photo %>" 
                        alt=""
                        class="avatar-sm rounded-circle me-2"
                        onerror="this.onerror=null;this.src='/placeholder_user.jpg';"
                      />
                    </td>
                    <td>
                      <h6 class="font-size-15 mb-1">
                        <%= users.surname %> <%= users.name %>
                      </h6>
                    </td>
                    <td><%= users.role %></td>
                    <td><%= users.email %></td>
                  </tr>
                  <% }); %>
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
  </div>

  <div class="col-xl-6">
    <div class="row px-2">
        <div class="card">
          <div class="card-header">
            <div class="align-items-center d-flex">
