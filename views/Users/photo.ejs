<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>

<div class="row">
  <div class="col-12">
    <div
      class="page-title-box d-flex align-items-center justify-content-between"
    >
      <h4 class="mb-0">Photo user</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript:void(0);">User</a>
          </li>
          <li class="breadcrumb-item active">Photo user</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<%- contentFor('body') %> <% if (message && message.length > 0) { %>
<ul class="errors">
  <li><%= message %></li>
</ul>
<% } %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <a href="/users" class="back-button">
          <button
            type="button"
            class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2"
          >
            <i
              class="mdi mdi-arrow-left-thick me-1"
              style="font-size: 14px"
            ></i>
            Back
          </button>
        </a>
        <h4 class="card-title">User tour</h4>
        <p class="card-title-desc">Change a main photo</p>
      </div>

      <form
        method="post"
        action="/user/photo/<%= formData._id %>"
        enctype="multipart/form-data"
      >
        <div class="card-body">
          <div class="mb-3 row">
            <label for="example-text-input" class="col-md-2 col-form-label">
              User
            </label>
            <div class="col-md-10">
              <h3><%= formData && formData.name ? formData.name : '' %> <%= formData && formData.surname ? formData.surname : '' %></h3>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="example-text-input" class="col-md-2 col-form-label">
              Main photo<b style="color: red">*</b>
            </label>
            <div class="col-md-10">
              <input class="form-control" type="file" name="photo" />
              <img
                src="<%= process.env.NODE_URL %>/assets/images/users/<%= formData.photo %>"
                style="width: 280px; height: auto; margin-top: 40px"
                onerror="this.onerror=null;this.src='/placeholder.jpg';"
              />
            </div>
          </div>

          <div class="mt-5 mb-3 row">
            <label for="example-text-input" class="col-md-2 col-form-label">
            </label>
            <div class="col-md-10">
              <button type="submit" class="btn btn-primary w-md">Send</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/assets/libs/@ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>
<script src="/assets/js/pages/form-editor.init.js"></script>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>
